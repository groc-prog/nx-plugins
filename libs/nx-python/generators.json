{
  "$schema": "http://json-schema.org/schema",
  "name": "nx-python",
  "version": "0.0.0",
  "generators": {
    "shared-virtual-environment": {
      "factory": "./src/generators/shared-virtual-environment/generator",
      "schema": "./src/generators/shared-virtual-environment/schema.json",
      "description": "Create a shared virtual environment all services and libraries."
    },
    "poetry-project": {
      "factory": "./src/generators/poetry-project/generator",
      "schema": "./src/generators/poetry-project/schema.json",
      "description": "Create a new Python project using Poetry."
    },
    "fastapi-project": {
      "factory": "./src/generators/fastapi-project/generator",
      "schema": "./src/generators/fastapi-project/schema.json",
      "description": "Creates a new FastAPI project."
    },
    "grpc-project": {
      "factory": "./src/generators/grpc-project/generator",
      "schema": "./src/generators/grpc-project/schema.json",
      "description": "Creates a new gRPC project."
    }
  }
}
