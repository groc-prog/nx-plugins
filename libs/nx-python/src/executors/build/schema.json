{
  "$schema": "http://json-schema.org/schema",
  "title": "Build executor",
  "description": "",
  "type": "object",
  "properties": {
    "outputPath": {
      "type": "string",
      "description": "Output path for the python tar/whl files relative to the current project's root.",
      "default": "dist"
    },
    "ignorePaths": {
      "type": "array",
      "description": "Ignored folders/files on build process.",
      "default": [],
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["outputPath"]
}
